{% comment %}
  Collection with Unified Smart Filters
  Works seamlessly with search and product pages
  Dynamic faceted filtering, grid/list toggle, sort options
{% endcomment %}

<script src="{{ 'unified-filters.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'product-card.css' | asset_url }}">

<div class="collection-page">
  {%- # Collection Header -%}
  <header class="collection-header">
    <div class="collection-header__content">
      <h1 class="collection-header__title">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <div class="collection-header__description">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </header>

  <div class="collection-main">
    {%- # Filters Sidebar -%}
    <aside class="collection-filters" aria-label="Product filters">
      {%- # Active Filters -%}
      <div class="active-filters" data-active-filters hidden>
        <div class="active-filters__header">
          <h3 class="active-filters__title">Active Filters</h3>
          <button 
            type="button" 
            class="active-filters__clear" 
            data-clear-all
          >
            Clear All
          </button>
        </div>
        <div class="active-filters__chips" data-filter-chips></div>
      </div>

      {%- # Category Filter -%}
      <div class="filter-group" data-filter-group="category">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Category</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="category"></div>
      </div>

      {%- # Brand Filter -%}
      <div class="filter-group" data-filter-group="brand">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Brand</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="brand"></div>
      </div>

      {%- # Price Filter -%}
      <div class="filter-group" data-filter-group="price">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Price Range</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content">
          <div class="price-range">
            <input 
              type="number" 
              class="price-range__input" 
              placeholder="€ Min" 
              data-price-min
            >
            <span class="price-range__separator">-</span>
            <input 
              type="number" 
              class="price-range__input" 
              placeholder="€ Max" 
              data-price-max
            >
          </div>
        </div>
      </div>

      {%- # Room Type Filter -%}
      <div class="filter-group" data-filter-group="room">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="false"
        >
          <span>Room Type</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="room" hidden></div>
      </div>

      {%- # Characteristics Filter -%}
      <div class="filter-group" data-filter-group="characteristics">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="false"
        >
          <span>Characteristics</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="characteristics" hidden></div>
      </div>
    </aside>

    {%- # Product Grid -%}
    <div class="collection-content">
      {%- # Toolbar -%}
      <div class="collection-toolbar">
        <div class="collection-toolbar__info">
          <p class="collection-toolbar__count">
            <strong data-result-count>{{ collection.products_count }}</strong> products
          </p>
        </div>

        <div class="collection-toolbar__controls">
          {%- # Sort Dropdown -%}
          <select class="collection-toolbar__sort" data-sort-select>
            <option value="relevance">Sort: Relevance</option>
            <option value="price-asc">Price: Low to High</option>
            <option value="price-desc">Price: High to Low</option>
            <option value="newest">Newest First</option>
          </select>

          {%- # View Toggle -%}
          <div class="view-toggle">
            <button 
              type="button" 
              class="view-toggle__btn active" 
              data-view="grid"
              aria-label="Grid view"
              aria-pressed="true"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <rect x="2" y="2" width="7" height="7"/>
                <rect x="11" y="2" width="7" height="7"/>
                <rect x="2" y="11" width="7" height="7"/>
                <rect x="11" y="11" width="7" height="7"/>
              </svg>
            </button>
            
            <button 
              type="button" 
              class="view-toggle__btn" 
              data-view="list"
              aria-label="List view"
              aria-pressed="false"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <rect x="2" y="3" width="16" height="3"/>
                <rect x="2" y="8.5" width="16" height="3"/>
                <rect x="2" y="14" width="16" height="3"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      {%- # Loading State -%}
      <div class="loading-state" data-loading-state hidden>
        <div class="loading-spinner"></div>
        <p>Loading products...</p>
      </div>

      {%- # Empty State -%}
      <div class="empty-state" data-empty-state hidden>
        <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
          <circle cx="32" cy="32" r="30" stroke="#E8E8E1" stroke-width="4"/>
          <path d="M32 20v24M20 32h24" stroke="#4D4D4D" stroke-width="3"/>
        </svg>
        <h3>No products found</h3>
        <p>Try adjusting your filters or search terms</p>
      </div>

      {%- # Product Grid -%}
      <div class="product-grid product-grid--grid" data-product-grid>
        {%- # JavaScript will populate this -%}
      </div>

      {%- # Load More -%}
      <div class="load-more" data-load-more hidden>
        <button type="button" class="load-more__btn" data-load-more-btn>
          Load More Products
        </button>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .collection-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .collection-header {
    margin-bottom: 2rem;
  }

  .collection-header__title {
    font-size: 2.5rem;
    color: #4D4D4D;
    margin-bottom: 1rem;
  }

  .collection-header__description {
    color: #4D4D4D;
    opacity: 0.8;
    max-width: 800px;
  }

  .collection-main {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .collection-main {
      grid-template-columns: 1fr;
    }
  }

  /* Filters Sidebar */
  .collection-filters {
    position: sticky;
    top: 2rem;
    height: fit-content;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }

  .active-filters {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #E8E8E1;
    border-radius: 8px;
  }

  .active-filters__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .active-filters__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #4D4D4D;
  }

  .active-filters__clear {
    background: none;
    border: none;
    color: #FBB03B;
    font-size: 0.875rem;
    cursor: pointer;
    padding: 0;
  }

  .active-filters__chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: #FFFFFF;
    border: 1px solid #4D4D4D;
    border-radius: 20px;
    font-size: 0.875rem;
    color: #4D4D4D;
    cursor: pointer;
  }

  .filter-chip:hover {
    background: #4D4D4D;
    color: #FFFFFF;
  }

  .filter-group {
    border-bottom: 1px solid #E8E8E1;
    padding: 1rem 0;
  }

  .filter-group__toggle {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    font-size: 1rem;
    font-weight: 600;
    color: #4D4D4D;
    cursor: pointer;
    padding: 0;
  }

  .filter-group__content {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .filter-option {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .filter-option__checkbox {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .filter-option__label {
    flex: 1;
    font-size: 0.875rem;
    color: #4D4D4D;
  }

  .filter-option__count {
    font-size: 0.875rem;
    color: #4D4D4D;
    opacity: 0.6;
  }

  .price-range {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .price-range__input {
    flex: 1;
    padding: 0.5rem;
    border: 1px solid #E8E8E1;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .price-range__separator {
    color: #4D4D4D;
  }

  /* Toolbar */
  .collection-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #E8E8E1;
  }

  .collection-toolbar__count {
    font-size: 0.875rem;
    color: #4D4D4D;
  }

  .collection-toolbar__controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .collection-toolbar__sort {
    padding: 0.5rem 1rem;
    border: 1px solid #E8E8E1;
    border-radius: 4px;
    background: #FFFFFF;
    font-size: 0.875rem;
    color: #4D4D4D;
    cursor: pointer;
  }

  .view-toggle {
    display: flex;
    gap: 0.5rem;
  }

  .view-toggle__btn {
    padding: 0.5rem;
    background: none;
    border: 1px solid #E8E8E1;
    border-radius: 4px;
    cursor: pointer;
    color: #4D4D4D;
  }

  .view-toggle__btn.active {
    background: #FBB03B;
    border-color: #FBB03B;
    color: #FFFFFF;
  }

  /* States */
  .loading-state,
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #4D4D4D;
  }

  .loading-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid #E8E8E1;
    border-top-color: #FBB03B;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .load-more {
    text-align: center;
    margin-top: 2rem;
  }

  .load-more__btn {
    padding: 0.75rem 2rem;
    background: #4D4D4D;
    color: #FFFFFF;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
  }

  .load-more__btn:hover {
    background: #FBB03B;
  }

  .hidden {
    display: none !important;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection with Filters",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "enable_infinite_scroll",
      "label": "Enable infinite scroll",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_comparison",
      "label": "Enable product comparison",
      "default": true
    }
  ]
}
{% endschema %}
