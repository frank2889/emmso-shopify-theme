{% comment %}
  Collection with Unified Smart Filters
  Works seamlessly with search and product pages
  Dynamic faceted filtering, grid/list toggle, sort options
  Refactored following Shopify best practices
{% endcomment %}

{{ 'section-collection.css' | asset_url | stylesheet_tag }}
{{ 'product-card.css' | asset_url | stylesheet_tag }}
<script src="{{ 'unified-filters.min.js' | asset_url }}" defer></script>

<div class="collection-page">
  {%- # Collection Header -%}
  <header class="collection-header">
    <div class="collection-header__content">
      <h1 class="collection-header__title">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <div class="collection-header__description">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </header>

  <div class="collection-main">
    {%- # Filters Sidebar -%}
    <aside class="collection-filters" aria-label="Product filters">
      {%- # Active Filters -%}
      <div class="active-filters" data-active-filters hidden>
        <div class="active-filters__header">
          <h3 class="active-filters__title">Active Filters</h3>
          <button 
            type="button" 
            class="active-filters__clear" 
            data-clear-all
          >
            Clear All
          </button>
        </div>
        <div class="active-filters__chips" data-filter-chips></div>
      </div>

      {%- # Category Filter -%}
      <div class="filter-group" data-filter-group="category">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Category</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="category"></div>
      </div>

      {%- # Brand Filter -%}
      <div class="filter-group" data-filter-group="brand">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Brand</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="brand"></div>
      </div>

      {%- # Price Filter -%}
      <div class="filter-group" data-filter-group="price">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="true"
        >
          <span>Price Range</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content">
          <div class="price-range">
            <input 
              type="number" 
              class="price-range__input" 
              placeholder="€ Min" 
              data-price-min
            >
            <span class="price-range__separator">-</span>
            <input 
              type="number" 
              class="price-range__input" 
              placeholder="€ Max" 
              data-price-max
            >
          </div>
        </div>
      </div>

      {%- # Room Type Filter -%}
      <div class="filter-group" data-filter-group="room">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="false"
        >
          <span>Room Type</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="room" hidden></div>
      </div>

      {%- # Characteristics Filter -%}
      <div class="filter-group" data-filter-group="characteristics">
        <button 
          type="button" 
          class="filter-group__toggle" 
          aria-expanded="false"
        >
          <span>Characteristics</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </button>
        <div class="filter-group__content" data-filter-content="characteristics" hidden></div>
      </div>
    </aside>

    {%- # Product Grid -%}
    <div class="collection-content">
      {%- # Toolbar -%}
      <div class="collection-toolbar">
        <div class="collection-toolbar__info">
          <p class="collection-toolbar__count">
            <strong data-result-count>{{ collection.products_count }}</strong> products
          </p>
        </div>

        <div class="collection-toolbar__controls">
          {%- # Sort Dropdown -%}
          <select class="collection-toolbar__sort" data-sort-select>
            <option value="relevance">Sort: Relevance</option>
            <option value="price-asc">Price: Low to High</option>
            <option value="price-desc">Price: High to Low</option>
            <option value="newest">Newest First</option>
          </select>

          {%- # View Toggle -%}
          <div class="view-toggle">
            <button 
              type="button" 
              class="view-toggle__btn active" 
              data-view="grid"
              aria-label="Grid view"
              aria-pressed="true"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <rect x="2" y="2" width="7" height="7"/>
                <rect x="11" y="2" width="7" height="7"/>
                <rect x="2" y="11" width="7" height="7"/>
                <rect x="11" y="11" width="7" height="7"/>
              </svg>
            </button>
            
            <button 
              type="button" 
              class="view-toggle__btn" 
              data-view="list"
              aria-label="List view"
              aria-pressed="false"
            >
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <rect x="2" y="3" width="16" height="3"/>
                <rect x="2" y="8.5" width="16" height="3"/>
                <rect x="2" y="14" width="16" height="3"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      {%- # Loading State -%}
      <div class="loading-state" data-loading-state hidden>
        <div class="loading-spinner"></div>
        <p>Loading products...</p>
      </div>

      {%- # Empty State -%}
      <div class="empty-state" data-empty-state hidden>
        <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
          <circle cx="32" cy="32" r="30" stroke="#E8E8E1" stroke-width="4"/>
          <path d="M32 20v24M20 32h24" stroke="#4D4D4D" stroke-width="3"/>
        </svg>
        <h3>No products found</h3>
        <p>Try adjusting your filters or search terms</p>
      </div>

      {%- # Product Grid -%}
      <div class="product-grid product-grid--grid" data-product-grid>
        {%- # JavaScript will populate this -%}
      </div>

      {%- # Load More -%}
      <div class="load-more" data-load-more hidden>
        <button type="button" class="load-more__btn" data-load-more-btn>
          Load More Products
        </button>
      </div>
    </div>
  </div>
</div>

{%- comment -%} Product Comparison Bar {%- endcomment -%}
{% render 'comparison-bar' %}

{% schema %}
{
  "name": "Collection with Filters",
  "tag": "section",
  "class": "section-collection",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24,
      "info": "Number of products to display per page"
    },
    {
      "type": "select",
      "id": "products_per_row_desktop",
      "label": "Products per row (desktop)",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "5",
          "label": "5"
        }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "products_per_row_mobile",
      "label": "Products per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Filters"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filtering",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collapse_filters_mobile",
      "label": "Collapse filters on mobile",
      "default": true,
      "info": "Filters will be hidden by default on mobile devices"
    },
    {
      "type": "header",
      "content": "View Options"
    },
    {
      "type": "checkbox",
      "id": "enable_view_toggle",
      "label": "Enable grid/list toggle",
      "default": true,
      "info": "Allow users to switch between grid and list view"
    },
    {
      "type": "header",
      "content": "Pagination"
    },
    {
      "type": "checkbox",
      "id": "enable_infinite_scroll",
      "label": "Enable infinite scroll",
      "default": false,
      "info": "Load more products automatically when scrolling"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "enable_comparison",
      "label": "Enable product comparison",
      "default": true,
      "info": "Allow users to compare multiple products"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_view",
      "label": "Enable quick view",
      "default": false,
      "info": "Show product details in a modal"
    }
  ]
}
{% endschema %}
