{% comment %}
  Product Section
  Following Shopify best practices with external CSS
  Includes related products with intelligent filters
{% endcomment %}

{{ 'section-product.css' | asset_url | stylesheet_tag }}
<script src="{{ 'unified-filters.min.js' | asset_url }}" defer></script>
{{ 'product-card.css' | asset_url | stylesheet_tag }}

<div class="product-page">
  <div class="product-main">
    {%- # Product Images -%}
    <div class="product-images">
      {% for image in product.images %}
        {% render 'image', 
          class: 'product-image', 
          image: image,
          sizes: '(max-width: 640px) 100vw, 50vw',
          aspect_ratio: '1:1'
        %}
      {% endfor %}
    </div>

    {%- # Product Info -%}
    <div class="product-info">
      <p class="product-vendor">{{ product.vendor }}</p>
      <h1 class="product-title">{{ product.title }}</h1>
      
      <div class="product-price">
        <span class="product-price__current">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="product-price__compare">{{ product.compare_at_price | money }}</span>
        {% endif %}
      </div>

      <div class="product-description">
        {{ product.description }}
      </div>

      {%- # Product Form -%}
      <div class="product-form">
        {% form 'product', product %}
          {% assign current_variant = product.selected_or_first_available_variant %}

          {% if product.variants.size > 1 %}
            <div class="product-variants">
              <label for="product-variant">Variant</label>
              <select name="id" id="product-variant" class="product-variants__select">
                {% for variant in product.variants %}
                  <option
                    value="{{ variant.id }}"
                    {% if variant == current_variant %}selected{% endif %}
                    {% unless variant.available %}disabled{% endunless %}
                  >
                    {{ variant.title }} - {{ variant.price | money }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% else %}
            <input type="hidden" name="id" value="{{ current_variant.id }}">
          {% endif %}

          <div class="product-quantity">
            <label for="product-quantity">Quantity</label>
            <input 
              type="number" 
              name="quantity" 
              id="product-quantity"
              min="1" 
              value="1"
              class="product-quantity__input"
            >
          </div>

          <button type="submit" class="product-form__submit">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M2 2h1.5l1.5 9h11l2-7H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="7" cy="16" r="1.5" fill="currentColor"/>
              <circle cx="15" cy="16" r="1.5" fill="currentColor"/>
            </svg>
            <span>Add to Cart</span>
          </button>
          
          {{ form | payment_button }}
        {% endform %}
      </div>
    </div>
  </div>

  {%- # Related Products Section -%}
  <div class="related-products">
    <h2 class="related-products__title">Related Products</h2>
    
    <div class="related-products__main">
      {%- # Compact Filters -%}
      <aside class="related-products__filters" aria-label="Related product filters">
        {%- # Brand Filter -%}
        <div class="filter-group filter-group--compact" data-filter-group="brand">
          <button 
            type="button" 
            class="filter-group__toggle" 
            aria-expanded="true"
          >
            <span>Brand</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="brand"></div>
        </div>

        {%- # Price Filter -%}
        <div class="filter-group filter-group--compact" data-filter-group="price">
          <button 
            type="button" 
            class="filter-group__toggle" 
            aria-expanded="true"
          >
            <span>Price</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
          </button>
          <div class="filter-group__content">
            <div class="price-range">
              <input 
                type="number" 
                class="price-range__input" 
                placeholder="€ Min" 
                data-price-min
              >
              <span class="price-range__separator">-</span>
              <input 
                type="number" 
                class="price-range__input" 
                placeholder="€ Max" 
                data-price-max
              >
            </div>
          </div>
        </div>

        {%- # Characteristics Filter -%}
        <div class="filter-group filter-group--compact" data-filter-group="characteristics">
          <button 
            type="button" 
            class="filter-group__toggle" 
            aria-expanded="false"
          >
            <span>Features</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M4 6l4 4 4-4" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="characteristics" hidden></div>
        </div>
      </aside>

      {%- # Product Grid -%}
      <div class="related-products__content">
        {%- # Loading State -%}
        <div class="loading-state" data-loading-state hidden>
          <div class="loading-spinner"></div>
          <p>Loading related products...</p>
        </div>

        {%- # Empty State -%}
        <div class="empty-state" data-empty-state hidden>
          <p>No related products found</p>
        </div>

        {%- # Product Grid -%}
        <div class="product-grid product-grid--grid" data-product-grid>
          {%- # JavaScript will populate this -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "section-product",
  "settings": [
    {
      "type": "header",
      "content": "Product Images"
    },
    {
      "type": "checkbox",
      "id": "enable_image_zoom",
      "label": "Enable image zoom on hover",
      "default": true
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image aspect ratio",
      "options": [
        { "value": "1:1", "label": "Square (1:1)" },
        { "value": "4:3", "label": "Landscape (4:3)" },
        { "value": "16:9", "label": "Widescreen (16:9)" }
      ],
      "default": "1:1"
    },
    {
      "type": "header",
      "content": "Product Information"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor/brand",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_inventory",
      "label": "Show inventory count",
      "default": false
    },
    {
      "type": "header",
      "content": "Buy Buttons"
    },
    {
      "type": "checkbox",
      "id": "show_dynamic_checkout",
      "label": "Show dynamic checkout buttons",
      "default": true,
      "info": "Shows express checkout buttons (Apple Pay, Google Pay, etc.)"
    },
    {
      "type": "checkbox",
      "id": "show_quantity_selector",
      "label": "Show quantity selector",
      "default": true
    },
    {
      "type": "header",
      "content": "Related Products"
    },
    {
      "type": "checkbox",
      "id": "show_related_products",
      "label": "Show related products",
      "default": true
    },
    {
      "type": "range",
      "id": "related_products_count",
      "label": "Number of related products",
      "min": 4,
      "max": 20,
      "step": 4,
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show filter sidebar",
      "default": true
    },
    {
      "type": "text",
      "id": "related_products_title",
      "label": "Related products heading",
      "default": "Related Products"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
