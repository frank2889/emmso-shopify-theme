{% comment %}
  Search Results Page with Unified Smart Filters
  Includes smart collection redirect, dynamic faceted filtering, grid/list toggle
  Query normalization prevents duplicate collections
{% endcomment %}

{{ 'section-search-results.min.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'product-card.min.css' | asset_url }}">
<script src="{{ 'query-normalizer.min.js' | asset_url }}" defer></script>
<script src="{{ 'unified-filters.min.js' | asset_url }}" defer></script>

<div class="search-results-page" data-search-results-page>
  
  {%- comment -%} Search Header with Query & Stats {%- endcomment -%}
  <div class="search-header">
    <div class="search-header__container">
      <h1 class="search-header__title">
        {%- case request.locale.iso_code | split: '-' | first -%}
          {%- when 'nl' -%}Zoekresultaten
          {%- when 'de' -%}Suchergebnisse
          {%- when 'fr' -%}Résultats de recherche
          {%- when 'es' -%}Resultados de búsqueda
          {%- when 'it' -%}Risultati della ricerca
          {%- when 'pt' -%}Resultados da pesquisa
          {%- when 'da' -%}Søgeresultater
          {%- else -%}Search Results
        {%- endcase -%}
      </h1>
      
      <div class="search-header__stats" data-result-stats>
        <span class="search-header__count" data-result-count>0</span>
        <span class="search-header__query" data-result-query></span>
      </div>
    </div>
  </div>

  <div class="search-results-layout">
    
    {%- comment -%} Smart Filters Sidebar {%- endcomment -%}
    <aside class="search-filters" data-search-filters>
      
      {%- comment -%} Active Filters {%- endcomment -%}
      <div class="active-filters" data-active-filters hidden>
        <div class="active-filters__header">
          <h3 class="active-filters__title">
            {%- case request.locale.iso_code | split: '-' | first -%}
              {%- when 'nl' -%}Actieve filters
              {%- when 'de' -%}Aktive Filter
              {%- when 'fr' -%}Filtres actifs
              {%- when 'es' -%}Filtros activos
              {%- when 'it' -%}Filtri attivi
              {%- when 'pt' -%}Filtros ativos
              {%- when 'da' -%}Aktive filtre
              {%- else -%}Active Filters
            {%- endcase -%}
          </h3>
          <button type="button" class="active-filters__clear" data-clear-all>
            {%- case request.locale.iso_code | split: '-' | first -%}
              {%- when 'nl' -%}Wis alles
              {%- when 'de' -%}Alle löschen
              {%- when 'fr' -%}Tout effacer
              {%- when 'es' -%}Borrar todo
              {%- when 'it' -%}Cancella tutto
              {%- when 'pt' -%}Limpar tudo
              {%- when 'da' -%}Ryd alt
              {%- else -%}Clear all
            {%- endcase -%}
          </button>
        </div>
        <div class="active-filters__chips" data-filter-chips></div>
      </div>

      {%- comment -%} Filter Groups {%- endcomment -%}
      <div class="filter-groups">
        
        {%- comment -%} Category Filter {%- endcomment -%}
        <div class="filter-group" data-filter-group="category">
          <button type="button" class="filter-group__toggle" aria-expanded="true">
            <span class="filter-group__title">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Categorie
                {%- when 'de' -%}Kategorie
                {%- when 'fr' -%}Catégorie
                {%- when 'es' -%}Categoría
                {%- when 'it' -%}Categoria
                {%- when 'pt' -%}Categoria
                {%- when 'da' -%}Kategori
                {%- else -%}Category
              {%- endcase -%}
            </span>
            <svg class="filter-group__icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="category"></div>
        </div>

        {%- comment -%} Brand Filter {%- endcomment -%}
        <div class="filter-group" data-filter-group="brand">
          <button type="button" class="filter-group__toggle" aria-expanded="true">
            <span class="filter-group__title">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Merk
                {%- when 'de' -%}Marke
                {%- when 'fr' -%}Marque
                {%- when 'es' -%}Marca
                {%- when 'it' -%}Marca
                {%- when 'pt' -%}Marca
                {%- when 'da' -%}Mærke
                {%- else -%}Brand
              {%- endcase -%}
            </span>
            <svg class="filter-group__icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="brand"></div>
        </div>

        {%- comment -%} Price Filter {%- endcomment -%}
        <div class="filter-group" data-filter-group="price">
          <button type="button" class="filter-group__toggle" aria-expanded="true">
            <span class="filter-group__title">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Prijs
                {%- when 'de' -%}Preis
                {%- when 'fr' -%}Prix
                {%- when 'es' -%}Precio
                {%- when 'it' -%}Prezzo
                {%- when 'pt' -%}Preço
                {%- when 'da' -%}Pris
                {%- else -%}Price
              {%- endcase -%}
            </span>
            <svg class="filter-group__icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="price">
            <div class="price-filter">
              <div class="price-filter__inputs">
                <input 
                  type="number" 
                  class="price-filter__input" 
                  placeholder="Min" 
                  data-price-min
                  min="0"
                  step="1"
                >
                <span class="price-filter__separator">-</span>
                <input 
                  type="number" 
                  class="price-filter__input" 
                  placeholder="Max" 
                  data-price-max
                  min="0"
                  step="1"
                >
              </div>
              <div class="price-filter__slider" data-price-slider></div>
            </div>
          </div>
        </div>

        {%- comment -%} Room Type Filter {%- endcomment -%}
        <div class="filter-group" data-filter-group="room">
          <button type="button" class="filter-group__toggle" aria-expanded="false">
            <span class="filter-group__title">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Ruimte
                {%- when 'de' -%}Raum
                {%- when 'fr' -%}Pièce
                {%- when 'es' -%}Habitación
                {%- when 'it' -%}Stanza
                {%- when 'pt' -%}Sala
                {%- when 'da' -%}Rum
                {%- else -%}Room Type
              {%- endcase -%}
            </span>
            <svg class="filter-group__icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="room" hidden></div>
        </div>

        {%- comment -%} Characteristics Filter {%- endcomment -%}
        <div class="filter-group" data-filter-group="characteristics">
          <button type="button" class="filter-group__toggle" aria-expanded="false">
            <span class="filter-group__title">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Eigenschappen
                {%- when 'de' -%}Eigenschaften
                {%- when 'fr' -%}Caractéristiques
                {%- when 'es' -%}Características
                {%- when 'it' -%}Caratteristiche
                {%- when 'pt' -%}Características
                {%- when 'da' -%}Egenskaber
                {%- else -%}Characteristics
              {%- endcase -%}
            </span>
            <svg class="filter-group__icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <div class="filter-group__content" data-filter-content="characteristics" hidden></div>
        </div>

      </div>
    </aside>

    {%- comment -%} Results Area {%- endcomment -%}
    <main class="search-results-main">
      
      {%- comment -%} Toolbar {%- endcomment -%}
      <div class="results-toolbar">
        
        {%- comment -%} View Toggle {%- endcomment -%}
        <div class="view-toggle">
          <button type="button" class="view-toggle__btn view-toggle__btn--active" data-view="grid" aria-label="Grid view">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <rect x="2" y="2" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
              <rect x="12" y="2" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
              <rect x="2" y="12" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
              <rect x="12" y="12" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
            </svg>
          </button>
          <button type="button" class="view-toggle__btn" data-view="list" aria-label="List view">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <rect x="2" y="3" width="16" height="3" stroke="currentColor" stroke-width="1.5"/>
              <rect x="2" y="9" width="16" height="3" stroke="currentColor" stroke-width="1.5"/>
              <rect x="2" y="15" width="16" height="3" stroke="currentColor" stroke-width="1.5"/>
            </svg>
          </button>
        </div>

        {%- comment -%} Sort Dropdown {%- endcomment -%}
        <div class="sort-dropdown">
          <label for="sort-select" class="sort-dropdown__label">
            {%- case request.locale.iso_code | split: '-' | first -%}
              {%- when 'nl' -%}Sorteren:
              {%- when 'de' -%}Sortieren:
              {%- when 'fr' -%}Trier:
              {%- when 'es' -%}Ordenar:
              {%- when 'it' -%}Ordina:
              {%- when 'pt' -%}Ordenar:
              {%- when 'da' -%}Sorter:
              {%- else -%}Sort:
            {%- endcase -%}
          </label>
          <select id="sort-select" class="sort-dropdown__select" data-sort-select>
            <option value="relevance">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Relevantie
                {%- when 'de' -%}Relevanz
                {%- when 'fr' -%}Pertinence
                {%- when 'es' -%}Relevancia
                {%- when 'it' -%}Rilevanza
                {%- when 'pt' -%}Relevância
                {%- when 'da' -%}Relevans
                {%- else -%}Relevance
              {%- endcase -%}
            </option>
            <option value="price-asc">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Prijs: Laag naar Hoog
                {%- when 'de' -%}Preis: Niedrig bis Hoch
                {%- when 'fr' -%}Prix: Bas à Élevé
                {%- when 'es' -%}Precio: Bajo a Alto
                {%- when 'it' -%}Prezzo: Basso ad Alto
                {%- when 'pt' -%}Preço: Baixo a Alto
                {%- when 'da' -%}Pris: Lav til Høj
                {%- else -%}Price: Low to High
              {%- endcase -%}
            </option>
            <option value="price-desc">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Prijs: Hoog naar Laag
                {%- when 'de' -%}Preis: Hoch bis Niedrig
                {%- when 'fr' -%}Prix: Élevé à Bas
                {%- when 'es' -%}Precio: Alto a Bajo
                {%- when 'it' -%}Prezzo: Alto a Basso
                {%- when 'pt' -%}Preço: Alto a Baixo
                {%- when 'da' -%}Pris: Høj til Lav
                {%- else -%}Price: High to Low
              {%- endcase -%}
            </option>
            <option value="newest">
              {%- case request.locale.iso_code | split: '-' | first -%}
                {%- when 'nl' -%}Nieuwste
                {%- when 'de' -%}Neueste
                {%- when 'fr' -%}Plus récent
                {%- when 'es' -%}Más reciente
                {%- when 'it' -%}Più recente
                {%- when 'pt' -%}Mais recente
                {%- when 'da' -%}Nyeste
                {%- else -%}Newest
              {%- endcase -%}
            </option>
          </select>
        </div>

      </div>

      {%- comment -%} Product Grid {%- endcomment -%}
      <div class="product-grid" data-product-grid data-view-mode="grid">
        {%- comment -%} Products will be dynamically loaded here {%- endcomment -%}
      </div>

      {%- comment -%} Loading State {%- endcomment -%}
      <div class="loading-state" data-loading-state hidden>
        <div class="loading-spinner"></div>
        <p class="loading-text">
          {%- case request.locale.iso_code | split: '-' | first -%}
            {%- when 'nl' -%}Laden...
            {%- when 'de' -%}Laden...
            {%- when 'fr' -%}Chargement...
            {%- when 'es' -%}Cargando...
            {%- when 'it' -%}Caricamento...
            {%- when 'pt' -%}Carregando...
            {%- when 'da' -%}Indlæser...
            {%- else -%}Loading...
          {%- endcase -%}
        </p>
      </div>

      {%- comment -%} Empty State {%- endcomment -%}
      <div class="empty-state" data-empty-state hidden>
        <svg class="empty-state__icon" width="64" height="64" viewBox="0 0 64 64" fill="none">
          <circle cx="32" cy="32" r="30" stroke="#E8E8E1" stroke-width="4"/>
          <path d="M26 26L38 38M38 26L26 38" stroke="#4D4D4D" stroke-width="4" stroke-linecap="round"/>
        </svg>
        <h3 class="empty-state__title">
          {%- case request.locale.iso_code | split: '-' | first -%}
            {%- when 'nl' -%}Geen resultaten gevonden
            {%- when 'de' -%}Keine Ergebnisse gefunden
            {%- when 'fr' -%}Aucun résultat trouvé
            {%- when 'es' -%}No se encontraron resultados
            {%- when 'it' -%}Nessun risultato trovato
            {%- when 'pt' -%}Nenhum resultado encontrado
            {%- when 'da' -%}Ingen resultater fundet
            {%- else -%}No results found
          {%- endcase -%}
        </h3>
        <p class="empty-state__text">
          {%- case request.locale.iso_code | split: '-' | first -%}
            {%- when 'nl' -%}Probeer uw zoekopdracht aan te passen of filters te wissen
            {%- when 'de' -%}Versuchen Sie, Ihre Suche anzupassen oder Filter zu löschen
            {%- when 'fr' -%}Essayez d'ajuster votre recherche ou d'effacer les filtres
            {%- when 'es' -%}Intente ajustar su búsqueda o borrar filtros
            {%- when 'it' -%}Prova ad aggiustare la tua ricerca o cancella i filtri
            {%- when 'pt' -%}Tente ajustar sua pesquisa ou limpar filtros
            {%- when 'da' -%}Prøv at justere din søgning eller ryd filtre
            {%- else -%}Try adjusting your search or clearing filters
          {%- endcase -%}
        </p>
      </div>

      {%- comment -%} Load More Button {%- endcomment -%}
      <div class="load-more" data-load-more hidden>
        <button type="button" class="load-more__btn" data-load-more-btn>
          {%- case request.locale.iso_code | split: '-' | first -%}
            {%- when 'nl' -%}Meer laden
            {%- when 'de' -%}Mehr laden
            {%- when 'fr' -%}Charger plus
            {%- when 'es' -%}Cargar más
            {%- when 'it' -%}Carica altro
            {%- when 'pt' -%}Carregar mais
            {%- when 'da' -%}Indlæs mere
            {%- else -%}Load More
          {%- endcase -%}
        </button>
      </div>

    </main>

  </div>

</div>

{%- comment -%} Product Comparison Bar {%- endcomment -%}
{% render 'comparison-bar' %}

{% schema %}
{
  "name": "Search Results",
  "class": "section-search-results",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24,
      "label": "Products per page"
    },
    {
      "type": "select",
      "id": "products_per_row_desktop",
      "label": "Products per row (desktop)",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "products_per_row_mobile",
      "label": "Products per row (mobile)",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Filter Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filtering",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_category_filter",
      "label": "Show category filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_brand_filter",
      "label": "Show brand filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_price_filter",
      "label": "Show price filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_room_filter",
      "label": "Show room type filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_characteristics_filter",
      "label": "Show characteristics filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collapse_filters_mobile",
      "label": "Collapse filters on mobile",
      "default": true
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_view_toggle",
      "label": "Enable grid/list view toggle",
      "default": true
    },
    {
      "type": "select",
      "id": "default_view",
      "label": "Default view",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "list", "label": "List" }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "header",
      "content": "Pagination"
    },
    {
      "type": "select",
      "id": "pagination_type",
      "label": "Pagination type",
      "options": [
        { "value": "load_more", "label": "Load More Button" },
        { "value": "infinite_scroll", "label": "Infinite Scroll" },
        { "value": "pagination", "label": "Page Numbers" }
      ],
      "default": "load_more"
    },
    {
      "type": "header",
      "content": "Product Card"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_view",
      "label": "Enable quick view",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_comparison",
      "label": "Enable product comparison",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Search Results"
    }
  ]
}
