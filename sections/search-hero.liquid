{% comment %}
  Search-First Hero Section
  Ultra-fast search engine as primary homepage element
  Performance-optimized with predictive search and instant results
{% endcomment %}

<section class="search-hero" data-section-id="{{ section.id }}" data-section-type="search-hero">
  <div class="search-hero__container">
    
    {%- # Headline -%}
    <div class="search-hero__header">
      <h1 class="search-hero__title">{{ section.settings.headline }}</h1>
      {%- if section.settings.subheadline != blank -%}
        <p class="search-hero__subtitle">{{ section.settings.subheadline }}</p>
      {%- endif -%}
    </div>

    {%- # Search Engine -%}
    <div class="search-hero__search">
      <form action="{{ routes.search_url }}" method="get" class="search-form" role="search">
        
        {%- # Search Input -%}
        <div class="search-input-wrapper">
          <input 
            type="search" 
            name="q" 
            id="search-hero-input"
            class="search-input"
            placeholder="{{ section.settings.search_placeholder }}"
            autocomplete="off"
            autocapitalize="off"
            spellcheck="false"
            aria-label="{{ 'general.search.placeholder' | t }}"
            data-predictive-search-input
          >
          
          {%- # Search Icon -%}
          <button type="submit" class="search-submit" aria-label="{{ 'general.search.submit' | t }}">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>

          {%- # Voice Search (if enabled) -%}
          {%- if section.settings.enable_voice_search -%}
            <button type="button" class="search-voice" aria-label="Voice search" data-voice-search-button>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 1v18M1 10h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          {%- endif -%}

          {%- # Clear Button -%}
          <button type="button" class="search-clear" aria-label="Clear search" data-search-clear hidden>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 5L5 15M5 5l10 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>

        {%- # Predictive Search Results -%}
        <div class="search-results" id="search-results" role="listbox" hidden data-predictive-search-results>
          <div class="search-results__inner">
            
            {%- # Loading State -%}
            <div class="search-loading" data-search-loading hidden>
              <div class="search-loading__spinner"></div>
              <p>{{ 'general.search.searching' | t }}...</p>
            </div>

            {%- # Results Container -%}
            <div class="search-results__container" data-search-results-container>
              {%- # Populated via JavaScript -%}
            </div>

            {%- # View All Results Link -%}
            <div class="search-results__footer" data-search-footer hidden>
              <a href="{{ routes.search_url }}" class="search-results__view-all" data-search-view-all>
                {{ 'general.search.view_all' | t }}
              </a>
            </div>

          </div>
        </div>

      </form>

      {%- # Search Suggestions (Trending/Recent) -%}
      {%- if section.settings.show_suggestions -%}
        <div class="search-suggestions" data-search-suggestions>
          
          {%- # Recent Searches -%}
          <div class="search-suggestions__recent" data-recent-searches hidden>
            <h3 class="search-suggestions__title">{{ 'general.search.recent' | t }}</h3>
            <ul class="search-suggestions__list" data-recent-list></ul>
          </div>

          {%- # Trending Searches -%}
          {%- if section.settings.trending_searches != blank -%}
            <div class="search-suggestions__trending">
              <h3 class="search-suggestions__title">{{ 'general.search.trending' | t }}</h3>
              <ul class="search-suggestions__list">
                {%- assign trending = section.settings.trending_searches | split: ',' -%}
                {%- for term in trending -%}
                  <li>
                    <button type="button" class="search-suggestion-chip" data-suggestion="{{ term | strip }}">
                      {{ term | strip }}
                    </button>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

        </div>
      {%- endif -%}

    </div>

    {%- # Quick Stats (Optional) -%}
    {%- if section.settings.show_stats -%}
      <div class="search-hero__stats">
        <div class="stat">
          <span class="stat__number">{{ all_products_count | default: '10,000+' }}</span>
          <span class="stat__label">{{ 'general.search.products' | t }}</span>
        </div>
        <div class="stat">
          <span class="stat__number">{{ section.settings.brand_count | default: '19' }}</span>
          <span class="stat__label">{{ 'general.search.brands' | t }}</span>
        </div>
        <div class="stat">
          <span class="stat__number">{{ section.settings.market_count | default: '10' }}</span>
          <span class="stat__label">{{ 'general.search.markets' | t }}</span>
        </div>
      </div>
    {%- endif -%}

  </div>
</section>

{%- # Critical CSS for Search Hero -%}
<style>
  .search-hero {
    min-height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #FBB03B 0%, #FF8C42 50%, #FBB03B 100%);
    padding: 4rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .search-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
    border-radius: 50%;
    animation: float 20s ease-in-out infinite;
  }

  .search-hero::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    border-radius: 50%;
    animation: float 15s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(5deg); }
  }

  .search-hero__container {
    max-width: 56rem;
    width: 100%;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .search-hero__title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 900;
    color: #FFFFFF;
    margin: 0 0 1.5rem;
    line-height: 1.1;
    text-shadow: 0 4px 20px rgba(0,0,0,0.2);
    letter-spacing: -0.02em;
  }

  .search-hero__subtitle {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    color: rgba(255, 255, 255, 0.95);
    margin: 0 0 3.5rem;
    font-weight: 500;
    text-shadow: 0 2px 10px rgba(0,0,0,0.15);
  }

  .search-form {
    position: relative;
    margin-bottom: 2.5rem;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    box-shadow: 0 20px 60px rgba(0,0,0,0.25), 0 8px 20px rgba(0,0,0,0.15);
    border-radius: 60px;
    transition: all 0.3s ease;
  }

  .search-input-wrapper:hover {
    transform: translateY(-2px);
    box-shadow: 0 25px 70px rgba(0,0,0,0.3), 0 10px 25px rgba(0,0,0,0.2);
  }

  .search-input {
    width: 100%;
    padding: 1.5rem 8rem 1.5rem 2rem;
    font-size: 1.25rem;
    border: 3px solid rgba(255,255,255,0.3);
    border-radius: 60px;
    background: rgba(255, 255, 255, 0.98);
    transition: all 0.3s ease;
    font-family: inherit;
    font-weight: 500;
  }

  .search-input::placeholder {
    color: rgba(77, 77, 77, 0.5);
  }

  .search-input:focus {
    outline: none;
    border-color: #FFFFFF;
    background: #FFFFFF;
    box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.3);
  }

  .search-submit,
  .search-voice,
  .search-clear {
    position: absolute;
    right: 1.25rem;
    padding: 0.75rem;
    background: #FBB03B;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border-radius: 50%;
    width: 48px;
    height: 48px;
  }

  .search-submit:hover,
  .search-voice:hover,
  .search-clear:hover {
    background: #FF8C42;
    transform: scale(1.1);
  }

  .search-submit {
    right: 1.25rem;
  }

  .search-voice {
    right: 5rem;
  }

  .search-clear {
    right: 8.75rem;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 1rem);
    left: 0;
    right: 0;
    background: #FFFFFF;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
    max-height: 70vh;
    overflow-y: auto;
    z-index: 100;
    border: 3px solid rgba(251, 176, 59, 0.2);
  }

  .search-results__inner {
    padding: 1.5rem;
  }

  .search-loading {
    text-align: center;
    padding: 3rem;
  }

  .search-loading__spinner {
    width: 3rem;
    height: 3rem;
    border: 4px solid rgba(251, 176, 59, 0.2);
    border-top-color: #FBB03B;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .search-suggestions {
    display: flex;
    gap: 2.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .search-suggestions__title {
    font-size: 1rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1rem;
    text-align: left;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .search-suggestions__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .search-suggestion-chip {
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.25);
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    font-size: 1rem;
    color: #FFFFFF;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: inherit;
    font-weight: 600;
    backdrop-filter: blur(10px);
  }

  .search-suggestion-chip:hover {
    background: #FFFFFF;
    border-color: #FFFFFF;
    color: #FBB03B;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .search-hero__stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-top: 4rem;
    flex-wrap: wrap;
  }

  .stat {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 24px;
    min-width: 160px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .stat:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
  }

  .stat__number {
    display: block;
    font-size: 3rem;
    font-weight: 900;
    color: #FFFFFF;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    margin-bottom: 0.5rem;
  }

  .stat__label {
    display: block;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.95);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .search-hero {
      min-height: 60vh;
      padding: 2.5rem 1rem;
    }

    .search-hero::before,
    .search-hero::after {
      width: 200px;
      height: 200px;
    }

    .search-hero__title {
      font-size: clamp(2rem, 8vw, 3rem);
      margin-bottom: 1.5rem;
    }

    .search-hero__subtitle {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .search-input-wrapper {
      margin-bottom: 1.5rem;
    }

    .search-input {
      padding: 1rem 7rem 1rem 1.25rem;
      font-size: 1rem;
      border-width: 2px;
    }

    .search-submit,
    .search-voice,
    .search-clear {
      width: 40px;
      height: 40px;
      padding: 0.5rem;
    }

    .search-submit {
      right: 1rem;
    }

    .search-voice {
      right: 4rem;
    }

    .search-clear {
      right: 7rem;
    }

    .search-hero__stats {
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .stat {
      padding: 1.5rem 1rem;
      min-width: 120px;
      flex: 0 0 calc(50% - 0.75rem);
    }

    .stat__number {
      font-size: 2.25rem;
    }

    .stat__label {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .search-hero {
      min-height: 55vh;
      padding: 2rem 0.75rem;
    }

    .search-hero__title {
      font-size: clamp(1.75rem, 7vw, 2.5rem);
    }

    .search-input {
      padding: 0.875rem 6.5rem 0.875rem 1rem;
      font-size: 0.9375rem;
    }

    .search-submit,
    .search-voice,
    .search-clear {
      width: 36px;
      height: 36px;
    }

    .search-submit {
      right: 0.75rem;
    }

    .search-voice {
      right: 3.5rem;
    }

    .search-clear {
      right: 6.25rem;
    }

    .stat {
      flex: 0 0 100%;
      min-width: auto;
    }
  }


    .stat__number {
      font-size: 2.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Search Hero",
  "tag": "section",
  "class": "section-search-hero",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Find Your Perfect Floor Solution"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Search from thousands of products across 19 premium brands"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder",
      "default": "Search for products, brands, or categories..."
    },
    {
      "type": "checkbox",
      "id": "enable_voice_search",
      "label": "Enable Voice Search",
      "default": false,
      "info": "Requires browser support for Web Speech API"
    },
    {
      "type": "checkbox",
      "id": "show_suggestions",
      "label": "Show Search Suggestions",
      "default": true
    },
    {
      "type": "text",
      "id": "trending_searches",
      "label": "Trending Searches",
      "default": "laminate flooring, vinyl planks, wood care, tile adhesive, stone sealer",
      "info": "Comma-separated list of trending search terms"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Quick Stats",
      "default": true
    },
    {
      "type": "text",
      "id": "brand_count",
      "label": "Brand Count",
      "default": "19"
    },
    {
      "type": "text",
      "id": "market_count",
      "label": "Market Count",
      "default": "10"
    }
  ],
  "presets": [
    {
      "name": "Search Hero"
    }
  ]
}
{% endschema %}
