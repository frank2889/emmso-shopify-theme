{% layout none %}

{% assign current_path = request.path | downcase %}
{% if current_path contains '/pt/pages/sitemap-collections-pt' %}

  {% assign base_url = shop.url %}
  {% assign locale = "pt" %}

  {% for collection in collections %}
    {% unless collection.handle == 'all' or collection.handle == 'meguiars' or collection.handle contains 'google' %}
{{ base_url }}/{{ locale }}/collections/{{ collection.handle }}
    {% endunless %}
  {% endfor %}

{% endif %}
