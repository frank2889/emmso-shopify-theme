{%- render 'structured-data-organization' -%}

{%- if template contains 'product' and product != blank -%}
  {%- render 'structured-data-breadcrumbs', product: product -%}
  {%- render 'structured-data-related-articles', context: product, limit: 4 -%}
  {%- render 'structured-data-video', context: product -%}
  {%- render 'structured-data-product-main', product: product -%}
  {%- render 'structured-data-faq', product: product -%}
