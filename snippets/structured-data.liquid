{%- if template contains 'article' and article != blank -%}
  {%- render 'structured-data-article-main', article: article -%}
  {%- render 'structured-data-related-articles', context: article, limit: 3 -%}
{%- endif -%}

{%- if template contains 'collection' and collection != blank -%}
  {%- render 'structured-data-collection-main', collection: collection -%}
  {%- render 'structured-data-faq', collection: collection -%}
  {%- render 'structured-data-video', context: collection -%}
  {%- render 'structured-data-collection-articles', collection: collection -%}
  {%- render 'structured-data-collection-carrousel', collection: collection -%}
{%- endif -%}


{%- if template contains 'blog' and blog != blank -%}
  {%- render 'structured-data-blog-articles', blog: blog, limit: 10 -%}
