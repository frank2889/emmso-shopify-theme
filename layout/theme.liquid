<!doctype html>
<html lang="{{ request.locale.iso_code | default: 'en' }}" dir="{{ request.locale.direction | default: 'ltr' }}">
  <head>
    <!-- 
    ========================================
    ðŸš€ EMMSO THEME - LIVE VERSION
    ========================================
    Timestamp: {{ 'now' | date: '%Y-%m-%d %H:%M:%S %Z' }}
    Build: {{ 'now' | date: '%Y%m%d-%H%M%S' }}
    Theme: Search-First E-commerce
    Languages: 20 (multilingual)
    ========================================
    -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {%- # Preconnect to critical domains for faster resource loading -%}
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    
    {%- # Inlined CSS Variables for instant availability -%}
    {% render 'css-variables' %}

    {%- # BASE CSS - MINIFIED (31% smaller) -%}
    {{ 'base.min.css' | asset_url | stylesheet_tag: preload: true }}
    
    {%- # Critical CSS - Inline for fastest FCP -%}
    {{ 'critical.min.css' | asset_url | stylesheet_tag }}
    
    {%- # Design System CSS - MINIFIED Load in sequence -%}
    {{ 'design-tokens.min.css' | asset_url | stylesheet_tag }}
    {{ 'animations.min.css' | asset_url | stylesheet_tag }}
    {{ 'forms.min.css' | asset_url | stylesheet_tag }}
    {{ 'buttons.min.css' | asset_url | stylesheet_tag }}
    {{ 'utilities.min.css' | asset_url | stylesheet_tag }}
    {{ 'product-card.min.css' | asset_url | stylesheet_tag }}
    {{ 'search.min.css' | asset_url | stylesheet_tag }}
    {{ 'filters.min.css' | asset_url | stylesheet_tag }}
    {{ 'comparison.min.css' | asset_url | stylesheet_tag }}
    
    {%- # Search Results CSS - Defer non-critical -%}
    {{ 'search-results.min.css' | asset_url | stylesheet_tag }}

    {%- # Social, title, etc. -%}
    {% render 'meta-tags' %}

    {{ content_for_header }}
    
    {%- # Preload critical fonts (if any) -%}
    {%- comment -%}
    <link rel="preload" href="{{ 'font.woff2' | asset_url }}" as="font" type="font/woff2" crossorigin>
    {%- endcomment -%}
  </head>

  <body>
    {%- # ACCESSIBILITY: Skip Links for keyboard navigation -%}
    <a href="#main-content" class="skip-to-content">{{ 'accessibility.skip_to_content' | t | default: 'Skip to content' }}</a>
    <a href="#search-bar" class="skip-to-search">{{ 'accessibility.skip_to_search' | t | default: 'Skip to search' }}</a>
    
    {% sections 'header-group' %}

    <main id="main-content" role="main">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}
    
    {%- # Mobile Bottom Navigation -%}
    {% render 'mobile-nav' %}
    
    {%- # Search Intelligence Module - Load first -%}
    <script src="{{ 'search-intelligence.js' | asset_url }}"></script>
    
    {%- # Search Engine JavaScript - Load after intelligence -%}
    <script src="{{ 'search-engine.js' | asset_url }}" defer></script>
    
    {%- # Related Products - Uses search intelligence -%}
    <script src="{{ 'related-products.js' | asset_url }}" defer></script>
    
    {%- # Performance monitoring -%}
    <script>
      // ðŸš€ EMMSO Theme Version Info
      console.log('%cðŸš€ EMMSO THEME - LIVE VERSION', 'background: #000; color: #0f0; font-size: 16px; padding: 10px;');
      console.log('%cTimestamp: {{ 'now' | date: '%Y-%m-%d %H:%M:%S' }}', 'color: #0f0; font-size: 12px;');
      console.log('%cBuild: {{ 'now' | date: '%Y%m%d-%H%M%S' }}', 'color: #0f0; font-size: 12px;');
      console.log('%cTheme: Search-First E-commerce with 20 languages', 'color: #0f0; font-size: 12px;');
      console.log('%c========================================', 'color: #0f0;');
      
      // Core Web Vitals monitoring
      if ('PerformanceLongTaskTiming' in window) {
        const observer = new PerformanceObserver((list) => {
          for (const entry of list.getEntries()) {
            console.warn('Long task detected:', entry.duration.toFixed(2) + 'ms');
          }
        });
        observer.observe({ entryTypes: ['longtask'] });
      }
      
      // Log Core Web Vitals
      window.addEventListener('load', () => {
        setTimeout(() => {
          const perfData = performance.getEntriesByType('navigation')[0];
          if (perfData) {
            console.log('Performance Metrics:', {
              'FCP': performance.getEntriesByName('first-contentful-paint')[0]?.startTime || 'N/A',
              'DOM Content Loaded': perfData.domContentLoadedEventEnd - perfData.domContentLoadedEventStart,
              'Load Complete': perfData.loadEventEnd - perfData.loadEventStart,
              'Total Load Time': perfData.loadEventEnd
            });
          }
        }, 0);
      });
    </script>
  </body>
</html>

