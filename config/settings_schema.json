[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "SEO & Metadata",
    "settings": [
      {
        "type": "header",
        "content": "Search Engine Optimization"
      },
      {
        "type": "text",
        "id": "seo_title",
        "label": "Default SEO Title",
        "info": "Used as fallback when page-specific title is not set",
        "default": "EMMSO - Premium European Products"
      },
      {
        "type": "textarea",
        "id": "seo_description",
        "label": "Default SEO Description",
        "info": "Used as fallback meta description (max 160 characters recommended)",
        "default": "Discover premium products across 20 European languages. Search-first shopping experience with voice search, instant results, and multilingual support."
      },
      {
        "type": "text",
        "id": "seo_keywords",
        "label": "Default SEO Keywords",
        "info": "Comma-separated keywords for search engines",
        "default": "premium products, european shopping, multilingual ecommerce, voice search"
      },
      {
        "type": "header",
        "content": "Social Media & Open Graph"
      },
      {
        "type": "image_picker",
        "id": "og_image",
        "label": "Default Open Graph Image",
        "info": "Used when sharing on social media (1200x630px recommended)"
      },
      {
        "type": "text",
        "id": "og_site_name",
        "label": "Site Name",
        "default": "EMMSO"
      },
      {
        "type": "select",
        "id": "og_type",
        "label": "Open Graph Type",
        "options": [
          {
            "value": "website",
            "label": "Website"
          },
          {
            "value": "product",
            "label": "Product"
          }
        ],
        "default": "website"
      },
      {
        "type": "header",
        "content": "Twitter Card Settings"
      },
      {
        "type": "select",
        "id": "twitter_card_type",
        "label": "Twitter Card Type",
        "options": [
          {
            "value": "summary",
            "label": "Summary"
          },
          {
            "value": "summary_large_image",
            "label": "Summary with Large Image"
          }
        ],
        "default": "summary_large_image"
      },
      {
        "type": "text",
        "id": "twitter_site",
        "label": "Twitter Username",
        "info": "Your Twitter handle (e.g., @emmso)",
        "placeholder": "@emmso"
      },
      {
        "type": "header",
        "content": "Structured Data"
      },
      {
        "type": "checkbox",
        "id": "enable_schema_org",
        "label": "Enable Schema.org Structured Data",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_breadcrumbs_schema",
        "label": "Enable Breadcrumbs Schema",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_organization_schema",
        "label": "Enable Organization Schema",
        "default": true
      },
      {
        "type": "text",
        "id": "organization_name",
        "label": "Organization Name",
        "default": "EMMSO"
      },
      {
        "type": "image_picker",
        "id": "organization_logo",
        "label": "Organization Logo",
        "info": "Used in structured data (square format recommended)"
      }
    ]
  }
]
